# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# GCP設定
GCP_PROJECT=your-gcp-project-id
GCP_LOCATION=your-gcp-location

# Worker URL (Cloud Run URL)
GEMINI_WORKER_URL=https://gemini-worker-xxxxxxxxxx-xx.a.run.app

# OIDC検証設定
VERIFY_OIDC=true
WORKER_INVOKER_SA=gemini-task-invoker@your-gcp-project-id.iam.gserviceaccount.com

# ポート設定 (Cloud Runでは自動設定されますが、ローカル開発用)
PORT=8080